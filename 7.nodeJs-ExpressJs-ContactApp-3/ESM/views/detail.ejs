<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <% if (!contact) { %>
        <div class="alert alert-danger fw-bold" role="alert">
          Data not found <br>
          <a href="/contact" class="alert-link fw-normal">&laquo; Back</a>
        </div>
      <% } else {%>
      <div class="card" style="width: 18rem;">
        <div class="card-header">Contact Details</div>
        <div class="card-body">
          <div class="card-title"><%= contact.nama %></div>
          <div class="card-subtitle mb-2 text-muted"><%= contact.noHp %></div>
          <div class="card-text"><%= contact.email %></div>
          <a href="/contact/edit/<%= contact.nama %>" class="btn btn-info badge rounded-pill">Edit</a>
          <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge rounded-pill"
            onclick="return confirm('Are you sure ?')">Delete</a>
          <a href="/contact" class="card-link d-block">&laquo; Back</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>