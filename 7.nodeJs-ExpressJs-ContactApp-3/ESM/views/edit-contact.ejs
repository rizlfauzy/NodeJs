<div class="container mt-3">
  <div class="row">
    <div class="co-md-6">
      <h2>Form Edit Contact</h2>
      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(err => { %>
          <li><%= err.msg %> </li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <form method="post" action="/contact/update">
        <input type="hidden" class="form-control" id="oldNama" name="oldNama"
          value="<%= contact.oldNama || contact.nama %>" required>
        <div class="mb-3">
          <label for="nama" class="form-label">Nama :</label>
          <input type="text" class="form-control" id="nama" name="nama" value="<%= contact.nama %>" required>
        </div>
        <div class="mb-3">
          <label for="noHp" class="form-label">No Hp :</label>
          <input type="text" class="form-control" id="noHp" name="noHp" value="<%= contact.noHp %>" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email :</label>
          <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>